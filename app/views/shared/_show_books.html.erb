<h1>All Available Books</h1>

<div class="container">
  <div class="row row-cols-4">

    <% @book.each do |book| %>

      <div class="col">
        <div class="card text-center" style="width: 18rem;">
            <div class="card-head">

              <%= link_to "#{book.title}", review_path(book.id), class: "nav-link" %>
              by - <%= show_book_writer(book.writer_id) %>

            </div>
            <%= Review.where(:book_id => book.id).count %> : reviews

          </div>
      </div>

    <% end %>

  </div>
</div>